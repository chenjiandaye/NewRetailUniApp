.sh_detail {
  font-size: 26rpx;
}
.sh_detail .list_info {
  margin: 0 20rpx;
  padding: 15rpx 0;
  border-bottom: 1px solid #cccccc;
}
.sh_detail .list_info .list_header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.sh_detail .list_info .list_container ._ul {
  padding: 40rpx 0;
}
.sh_detail .list_info .list_container ._ul ._li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  line-height: 48rpx;
}
.sh_detail .list_info .total {
  text-align: right;
}
.sh_detail .list_info .total .total_price {
  font-weight: 700;
}
.sh_detail .question,
.sh_detail .image_upload {
  padding: 0 20rpx;
}
.sh_detail .question .txt,
.sh_detail .image_upload .txt {
  padding: 20rpx 0;
}
.sh_detail .question .area,
.sh_detail .image_upload .area {
  width: 100%;
  height: 200rpx;
  border: 1px solid #ccc;
  box-sizing: border-box;
}
.sh_detail .footer_btn {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding: 80rpx 0;
}
.sh_detail .footer_btn .cancel,
.sh_detail .footer_btn .ok {
  margin: 0;
  border-radius: 6rpx;
  width: 120rpx;
  height: 55rpx;
  line-height: 55rpx;
}
.sh_detail .footer_btn .cancel {
  margin-right: 40rpx;
}
.sh_detail .footer_btn .ok {
  background-color: #409eff;
  color: #fff;
}
.sh_detail .footer_btn .ok::after {
  border: 0;
}

